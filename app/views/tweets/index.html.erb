<div id="main">
  <%= render partial: "tweets/dashboard" %>
  <%= render partial: "tweets/categories" %>
  <div class="content-main white-background content-border" role="main">
    <div class="content-header">
      <div class="header-inner">
        <h2>Tweets</h2>
      </div>
    </div>
    <div class="content-tweet">
      <ul class="tweet-items">
        <% @tweets.each do |tweet|%>
        <li>
          <div class="content">
            <div class="header">
              <strong class="name">
                <%= tweet[:user][:name] %>
              </strong>
              <%= image_tag(tweet[:user][:image], alt: "Fail") %> 
              <span class="date">
                <%=time_ago_in_words(tweet[:created_at]) %>
              </span>
            </div>
            <div class="tweet">
              <div class="name">
                <%=tweet[:text].sub(/(https?:\/\/([-\w\.]+)+(:\d+)?(\/([\w\/_\.]*(\?\S+)?)?)?)/){|s|"<a href=#{s}>#{s}</a>"}.html_safe%>
              </div>
            </div>
            <%= render partial: "tweets/footer", :locals => {:tweet => tweet }%>
          </div>
        </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
<%= paginate @tweets %>

